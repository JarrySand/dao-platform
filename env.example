# ===========================================
# Firebase Configuration
# ===========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id

# ===========================================
# EAS (Ethereum Attestation Service) Configuration
# ===========================================
NEXT_PUBLIC_DAO_SCHEMA_UID=your_dao_schema_uid_here
NEXT_PUBLIC_DOCUMENT_SCHEMA_UID=your_document_schema_uid_here
NEXT_PUBLIC_DOCUMENT_V2_SCHEMA_UID=your_document_v2_schema_uid_here
NEXT_PUBLIC_EAS_CONTRACT_ADDRESS=0xC2679fBD37d54388Ce493F1DB75320D236e1815e
NEXT_PUBLIC_SCHEMA_REGISTRY_ADDRESS=0x0a7E2Ff54e76B8E6659aedc9103FB21c038050D0
NEXT_PUBLIC_EAS_GRAPHQL_URL=https://sepolia.easscan.org/graphql

# Server-only: set via hosting env vars in production
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here

# ===========================================
# Network Configuration
# ===========================================
NEXT_PUBLIC_ETHEREUM_NETWORK=sepolia
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ===========================================
# IPFS Configuration
# ===========================================
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# Server-only: Pinata credentials (NOT exposed to browser)
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_KEY=your_pinata_secret_key_here
PINATA_JWT=your_pinata_jwt_token_here

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ENABLE_LOCALSTORAGE_FALLBACK=false
NEXT_PUBLIC_FORCE_HTTPS=true
NEXT_PUBLIC_CSP_ENABLED=true
